<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/bunlogin"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/edUsername"
            android:paddingLeft="10dp"
            android:background="@drawable/shape_editext"
            android:layout_width="match_parent"
            android:hint="Username"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edPass"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_editext"
            android:layout_width="match_parent"
            android:hint="Gmail or Phone"
            android:layout_below="@id/edUsername"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="OR"
            android:layout_below="@id/edPass"
            android:layout_centerHorizontal="true"
            android:textColor="#ccc"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="120dp"
            android:text="Sign in"
            android:layout_marginTop="30dp"
            android:layout_below="@id/edPass"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_btnlogin"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/btnFb"
            android:layout_width="120dp"
            android:text="Facebook"
            android:background="@drawable/shape_btnlogin"
            android:layout_below="@id/edPass"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tvCreateAccount"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#ccc"
            android:layout_below="@id/btnSignIn"
            android:text="CREATE A NEW ACCOUNT"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>